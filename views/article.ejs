<%- include("partials/header.ejs") %>

<main class="max-w-3xl mx-auto px-4 py-8 text-black">
  <h2 class="text-3xl font-bold mb-2"><%= article.title %></h1>
  <p class="text-sm text-black mb-4">
    <%= article.source.name %> â€¢ <%= article.author || "Unknown author" %> @ <%= article.date || "Unknown Date" %>
  </p>

    <img src="<%= article.urlToImage || '/images/placeholder.jpg' %>" alt="<%= article.title %>" class="max-w-full h-auto"/>

    <h3 class="font-bold text-lg">Description:</h2>
  <p class="leading-relaxed text-black"><%= article.description %></p>

  <% if(article.content) {%>
  <h3 class="font-bold text-lg">Content:</h2>
  <p class="leading-relaxed text-black"><%= article.content %></p>
  <%}%>
  <div class="flex justify-between">
    <a
      href="<%= article.url %>"
      target="_blank"
      class="text-center inline-block mt-6 text-green-500 underline"
    >
      Read original source
      </a>
    
    <!-- Modal toggle -->
    <div class="block space-y-4 md:flex md:space-y-0 md:space-x-4 rtl:space-x-reverse">
        <button id="dig-deeper-btn" data-modal-target="large-modal" data-modal-toggle="large-modal" class="items-center inline-flex text-white bg-black rounded-md box-border border border-transparent hover:bg-brand-strong focus:ring-4 focus:ring-black-medium shadow-xs font-medium leading-5 rounded-base text-sm px-4 py-2.5 focus:outline-none" type="button">
          Dig Deeper with AI
        </button>
    </div>

    <!-- Large Modal -->
    <div id="large-modal" tabindex="-1" class="fixed top-0 left-0 right-0 z-50 hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full">
        <div class="relative w-full max-w-4xl max-h-full">
            <!-- Modal content -->
            <div class="relative bg-white border border-default rounded-base shadow-sm p-4 md:p-6">
                <!-- Modal header -->
                <div class="flex items-center justify-between border-b border-default pb-4 md:pb-5">
                    <h3 class="text-lg font-medium text-heading">
                        AI Analysis...
                    </h3>
                    <button type="button" class="text-body bg-transparent hover:bg-neutral-tertiary hover:text-heading rounded-base text-sm w-9 h-9 ms-auto inline-flex justify-center items-center" data-modal-hide="large-modal">
                        <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24"><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18 17.94 6M18 18 6.06 6"/></svg>
                        <span class="sr-only">Close modal</span>
                    </button>
                </div>
                <!-- Modal body -->
                <div id="modal-content" class="space-y-4 md:space-y-6 py-4 md:py-6">
                    <p id="modal-text" class="leading-relaxed text-body whitespace-pre-line">
                      <% if(aiContent) { %>
                      <%= aiContent %>
                      <% } else { %>
                        Loading...
                      <%}%>
                    </p>
                </div>
                <!-- Modal footer -->
                <div class="flex items-center border-t border-default space-x-4 pt-4 md:pt-5">
                  <button data-modal-hide="large-modal" type="button" class="text-white bg-black box-border border border-transparent hover:bg-brand-strong focus:ring-4 focus:ring-brand-medium shadow-xs font-medium leading-5 rounded-base text-sm px-4 py-2.5 focus:outline-none">Close</button>
                </div>
            </div>
        </div>
    </div>

  </div>
</main>

<%- include("partials/footer.ejs") %>
